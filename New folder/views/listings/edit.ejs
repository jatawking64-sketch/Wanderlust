<% layout("/layouts/boilerplate") %>
 <div class="row">
    <div class="col-8 offset-2">
        <br>
    <h3>Edit your Listing</h3><br>
    <form method="POST" action="/listings/<%= listing._id %>?_method=PUT"
        novalidate
        class="needs-validation"
        >
        <div class="mb-1 p-2">
            <label for="title" class="form-label">Title</label>
            <input 
            type="text" 
            name="listing[title]" 
            value="<%= listing.title %>" 
            class="form-control"  required 
            ></input>
            <div class="invalid-feedback">Title looks good</div>
        </div><br>
        <div class="mb-1 p-2">
            <label for="description" class="form-label">Description</label>
            <textarea 
            type="text" 
            name="listing[description]" 
            value="<%= listing.description %>"
            class="form-control" required></textarea>
            <div class="invalid-feedback">Title looks description</div>
        </div><br>
        <div class="mb-1 p-2">
            <label for="image" class="form-label">Image Link</label>
            <input 
            type="text"
            name="listing[image]" 
            value="<%= listing.description %>" 
            class="form-control" required></input>
            <div class="invalid-feedback">Title looks Link</div>
        </div><br>
        <div class="row">
        <div class="mb-1  col-md-4">
            <label for="price" class="form-label">Price</label>
            <input 
            type="number" 
            name="listing[price]" 
            value="<%= listing.price %>" 
            class="form-control" required></input>
            <div class="invalid-feedback">Title looks Price</div>
        </div><br>
        <div class="mb-1 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input 
            type="text" 
            name="listing[country]" 
            value="<%= listing.country %>" 
            class="form-control" required></input>
            <div class="invalid-feedback">Title looks Country</div>
        </div>
        </div>
        <br>
        <div class="mb-1 p-2">
            <label for="location" class="form-label">Location</label>
            <input 
            type="text" 
            name="listing[location]" 
            value="<%= listing.location %>" 
            class="form-control" required></input>
            <div class="invalid-feedback">Title looks Loction</div>
        </div><br><br>
        
        <button class="btn btn-dark add-btn">Edit</button>
    </form>
    </div>
</div><br>



<script src="/public/js/script.js"></script>
